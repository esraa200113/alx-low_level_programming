#!/bin/bash

# Check if the C file is provided as an argument
if [ -z "$1" ]; then
    echo "Usage: $0 <C_FILE>"
    exit 1
fi

# Extract the C file name without extension
CFILE=$(basename "$1" .c)

# Generate assembly code using gcc
gcc -S -masm=intel "$1" -o "${CFILE}.s"

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code generated successfully. Output file: ${CFILE}.s"
else
    echo "Error during compilation."
fi
